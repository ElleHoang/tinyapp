<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-targets="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
      <!-- Logout Link -->
      <form action="/logout" method="POST">
        <label for="user" style="margin: 1em">Logged In As: <%= user.email %></label>
        <button class="btn btn-primary" type="submit">Logout</button>
      </form>
    <% } else { %>
      <!-- Login Link -->
      <a href="/login" style="margin-right: 1em">Login</a>
      <a href="/register">Register</a>
    <% } %>
  </nav>
</header>